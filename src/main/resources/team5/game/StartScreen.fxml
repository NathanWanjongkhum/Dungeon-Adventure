               <font>
                  <Font name="Juice ITC" size="72.0" />
               </font></Text>
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </StackPane>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Button fx:id="myNew" alignment="TOP_CENTER" contentDisplay="CENTER" graphicTextGap="0.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#switchToHeroCreation" prefHeight="30.0" prefWidth="125.0" text="New Game" textAlignment="CENTER" textFill="#5e5d5d">
