               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
               <padding>
                  <Insets top="-1.0" />
               </padding>
               <effect>
                  <InnerShadow height="10.0" radius="4.5" width="10.0" />
               </effect>
            </Button>
            <Button fx:id="myQuit" mnemonicParsing="false" onAction="#exitGame" prefHeight="30.0" prefWidth="125.0" text="Quit" textFill="RED">
               <padding>
                  <Insets top="-1.0" />
               </padding>
               <effect>
                  <InnerShadow height="10.0" radius="4.5" width="10.0" />
               </effect></Button>
         </children>
      </VBox>
   </children>
</VBox>
